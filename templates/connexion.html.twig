{% extends 'base.html.twig' %}

{% block body %}
<!-- Ajout de la police Orbitron -->
<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">

<div class="flex flex-col min-h-screen bg-black text-white relative overflow-hidden font-orbitron">
    <!-- Background animation -->
    <div class="absolute inset-0 z-0">
        <div class="absolute top-1/3 left-1/4 w-72 h-72 bg-blue-500 blur-3xl opacity-40 rounded-full animate-pulse"></div>
        <div class="absolute bottom-1/3 right-1/4 w-96 h-96 bg-purple-500 blur-3xl opacity-40 rounded-full animate-pulse"></div>
    </div>

    <!-- Barre de navigation -->
    <nav class="w-full p-5 flex justify-between items-center bg-opacity-10 backdrop-blur-lg border-b border-gray-600 relative z-10">
        <span class="text-2xl font-extrabold tracking-wide text-cyan-400 neon-text">Kevbot</span>
        <ul class="flex space-x-6 text-lg uppercase">
            <li><a href="{{ path('app_home') }}" class="hover:text-cyan-400 transition duration-300">Home</a></li>
            <li><a href="{{ path('app_article') }}" class="hover:text-cyan-400 transition duration-300">Articles</a></li>
            <li><a href="{{ path('app_addArticle') }}" class="hover:text-cyan-400 transition duration-300">Ajouter Article</a></li>
            <li><a href="{{ path('app_home') }}" class="hover:text-cyan-400 transition duration-300">Inscription</a></li>
            <li><a href="{{ path('app_connexion') }}" class="font-bold text-cyan-400 border-b-2 border-cyan-400">Connexion</a></li>

        </ul>
    </nav>

    <!-- Conteneur principal avec ESPACEMENT -->
    <div class="flex flex-col flex-grow items-center justify-center mt-16">
        <!-- Titre futuriste stylé -->
        <h1 class="text-4xl text-cyan-400 font-bold uppercase tracking-widest neon-text mb-8">CONNEXION</h1>

        <!-- Formulaire d'inscription -->
        <div class="relative z-10 bg-gray-900 bg-opacity-70 p-10 shadow-2xl rounded-2xl w-96 border border-gray-700">
            <form action="#" method="POST" class="space-y-5">
               
                <div class="relative">
                    <input type="email" placeholder="Email" class="w-full px-4 py-3 bg-black border border-gray-700 rounded-lg text-cyan-300 focus:ring-2 focus:ring-cyan-400 focus:outline-none shadow-lg">
                </div>
                <div class="relative">
                    <input type="password" placeholder="Mot de passe" class="w-full px-4 py-3 bg-black border border-gray-700 rounded-lg text-cyan-300 focus:ring-2 focus:ring-cyan-400 focus:outline-none shadow-lg">
                </div>
                <button type="submit" class="w-full bg-cyan-500 text-black py-3 rounded-lg text-lg font-bold tracking-wide shadow-lg hover:bg-cyan-600 transition duration-300 transform hover:scale-105 neon-glow">
                    Se connecter
                </button>
            </form>
        </div>
    </div>

    <!-- Image Kevbot -->
    <img src="{{ asset('images/kevbot.png') }}" alt="Kevbot" 
        class="absolute bottom-40 left-4 w-48 h-48 opacity-90 hover:opacity-100 transition duration-300">


    <!-- Audio Player -->

<script type="module" src="https://cdn.jsdelivr.net/npm/player.style/tailwind-audio/+esm"></script>

<media-theme-tailwind-audio
  style="--media-primary-color: #47eaff; --media-secondary-color: #000000; --media-accent-color: #32d2c7;"
>
  <audio
    slot="media"
src="{{ asset('audio/clubbed-to-death.mp3') }}"
    crossorigin
  ></audio>
</media-theme-tailwind-audio>

    <!-- Footer fixé en bas -->
    <footer class="w-full bg-opacity-20 backdrop-blur-lg p-6 text-center border-t border-gray-700 mt-auto">
        <div class="flex justify-center space-x-8 text-cyan-300">
            <a href="#" class="hover:text-cyan-400 transition">CGV</a>
            <a href="#" class="hover:text-cyan-400 transition">Réseaux</a>
            <a href="#" class="hover:text-cyan-400 transition">Contact</a>
        </div>
        <p class="text-sm mt-4 text-gray-500">© 2049 - Cyber Adrar</p>
    </footer>
</div>

<style>
    /* Ajout de la police Orbitron */
    .font-orbitron {
        font-family: 'Orbitron', sans-serif;
    }

    /* Effet Neon NET et plus précis */
    .neon-text {
        text-shadow: 
            0 0 3px #00ffff, 
            0 0 7px #00ffff, 
            0 0 0.1px #00ffff;
    }

    .neon-glow {
        box-shadow: 
            0 0 5px #00ffff, 
            0 0 10px #00ffff, 
            0 0 15px #00ffff;
        border: 1px solid rgba(0, 255, 255, 0.7);
    }
</style>
{% endblock %}
